@model EatFast_Menux.Domain.Entities.Usuario

<h2>Nuevo Usuario</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Contraseña</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label>Rol</label>
        <input asp-for="Rol" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar Usuario</button>
</form>
