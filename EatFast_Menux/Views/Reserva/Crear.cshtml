@model EatFast_Menux.Domain.Entities.Reserva

<h2>Nueva Reserva</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label>Nombre Cliente</label>
        <input asp-for="NombreCliente" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fecha Reserva</label>
        <input asp-for="FechaReserva" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cantidad de Personas</label>
        <input asp-for="CantidadPersonas" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <div class="form-group">
        <label>Observaciones</label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success mt-3">Guardar</button>
</form>
