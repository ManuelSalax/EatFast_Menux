@model EatFast_Menux.Domain.Entities.ProductoInventario

<h2>Agregar Producto al Inventario</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cantidad</label>
        <input asp-for="Cantidad" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Nivel Mínimo</label>
        <input asp-for="NivelMinimo" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Unidad de Medida</label>
        <input asp-for="UnidadMedida" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
